<header>

<div class="navigationBar">
  <ul>
    <li class="navList"><%= link_to root_path do %></li>
      <%= image_tag "GYD.png", class: "headerLogo", size: "40x40" %>
    <% end %>
    <li class="navList"><%= link_to "Salons", salons_index_path %></li>
    <li class="navList"><%= link_to "Appointments", appointments_index_path %></li>
    <li class="navList"><%= link_to "Services", categories_show_path %></li>
    <% if logged_in? %>
      <li><%= link_to "Users", '#' %></li>
      <li class="dropdown">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
          Hi<b class="caret"></b>
        </a>
        <ul class="dropdown-menu">
          <li><%= link_to "Profile", current_user %></li>
          <li>
            <%= link_to "Log out", destroy_session_path %>
          </li>
        </ul>
      <% else %>
        <li class="navList" data-toggle="modal" data-target="#popUpWindow">Login</li>
          <div class="modal fade" id="popUpWindow">
          <div class="modal-dialog">
            <div class="modal-content">
              <!--header -->
              <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h1 class="modal-title">Log In</h1>
              </div>

              <!--render form -->
              <div class="modal-body">
                <div class="form-group" id="modalBodyContentLogIn">
                  <%= render "sessions/new" %>
                </div>
                <div class="form-group" id="modalBodyContentRegister" style="">
                  <%= render "users/loginregistration" %>
                </div>
              </div>
            </div>
          </div>
          </div>
        <% end %>

</header>
